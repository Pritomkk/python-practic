﻿@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<form action="" method="post">

     Name:
    <input type="text" name="Name" value="@Model.Name" placeholder="Enter your Name" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <br />
    UserName:
    <input type="text" name="UserName" value="@Model.UserName" placeholder="Enter your Username" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("UserName")</span>
    <br />

    Id:
    <input type="text" name="Id" value="@Model.Id" placeholder="Enter your valid ID" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Id")</span>
    <br />

    Email:
    <input type="email" name="Email" value="@Model.Email" placeholder="Enter your email" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span>
    <br />
    <input type="submit" value="Sign Up" class="btn btn-danger" />
</form>